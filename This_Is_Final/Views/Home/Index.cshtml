@model Movie

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #F7DC6F;
    }

    .jumbotron {
        background-color: #2980B9;
        color: white;
        text-align: center;
        padding: 100px;
    }

        .jumbotron h1 {
            font-size: 4rem;
            font-weight: bold;
            margin-bottom: 50px;
        }

    .btn-film {
        background-color: #E74C3C;
        color: white;
        font-size: 2rem;
        border-radius: 50%;
        padding: 50px;
        margin: 50px;
        box-shadow: 2px 2px 10px #888888;
        transition: all 0.2s ease-in-out;
    }

        .btn-film:hover {
            transform: rotate(360deg);
        }

    .movie-info {
        margin-top: 50px;
        padding: 20px;
        background-color: #ECF0F1;
        border-radius: 10px;
        box-shadow: 2px 2px 5px #888888;
    }

        .movie-info h2 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #2980B9;
        }

        .movie-info p {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

    .quote {
        font-style: italic;
        font-size: 2rem;
        margin-top: 50px;
        text-align: center;
        color: #E74C3C;
    }
</style>

<div class="jumbotron">
    <h1>What Should You Watch Next?</h1>
    <p>Press the button to find out!</p>

    <form method="get" action="@Url.Action("Index", "Movie")">
        <button type="submit" class="btn-film">
            <i class="fa fa-film"></i>
        </button>
    </form>
</div>

@if (Model != null)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 movie-info">
                <h2>@Model.Title</h2>
                <p><strong>Year:</strong> @Model.Year</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Rank:</strong> @Model.Rank</p>
                <p><strong>Rating:</strong> @Model.Rating</p>
            </div>
        </div>
    </div>

    @*<p class="quote">"Movies can change the world." - Steven Spielberg</p>*@
}

